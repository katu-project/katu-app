.topLogo{
  margin-top: 10rpx;
  margin-left: 10rpx;
  height: 300rpx;
  width: 300rpx;
  opacity: 0.8;
}

.item {
  background: rgba(47, 49, 83, 0.6);
  padding: 20rpx;
  height: 25vw;
  width: 40vw; 
  border-radius: 10rpx;
}

.search, .notice{
  height: 10vw;
  width: 10vw;
  border-radius: 50%;
  border: 1rpx solid white;
  background-color: rgba(255,255,255,0.9);
  box-shadow:0px 10px 20px -10px black;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.search .dot{
  background-color: red;
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  top: 2.5vw;
  right: 2vw;
}