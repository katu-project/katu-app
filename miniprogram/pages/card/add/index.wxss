.pic{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}
.pic-img {
  margin-bottom: 10rpx;
  border: 1px solid skyblue;
}

.action{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx;
}

.action-button {
  margin: 20rpx 10rpx 0 10rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  flex: 1;
  border: 1px solid slateblue;
}