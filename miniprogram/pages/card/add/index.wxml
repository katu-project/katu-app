
<view class="main page">
  <view class="pic">
    <block wx:for="{{pic}}" wx:key="index">
      <image class="pic-img card" data-index="{{index}}" mode="aspectFit" bindtap="goTapPic" src="{{item.url}}"></image>
    </block>
  </view>
  <view class="action-list">
    <view class="flex-row-sb">
      <checkbox bindtap="keepEncrypt" checked="{{encrypted}}">开启加密</checkbox>
      <view class="flex-row add-card-pic" bindtap="addCardPic">
        <image class="icon" mode="aspectFit" src="/static/images/{{pic.length == 1?'plus':'sub'}}.svg"></image>
        <view>{{pic.length==1?'增加':'移除'}}卡面</view>
      </view>
    </view>
    <view class="save" bindtap="goSaveCard">保存</view>
  </view>
</view>