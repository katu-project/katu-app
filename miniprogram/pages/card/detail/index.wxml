<view class="main">
  <view class="pic">
    <block wx:for="{{image}}" wx:key="index">
      <image class="pic-img card" data-index="{{index}}" mode="aspectFit" bindtap="goTapPic" src="{{item.url}}"></image>
    </block>
  </view>
  <view class="button-row-list">
    <view bindtap="goUpdateCard" style="margin-right: 10rpx;">修改</view>
    <view bindtap="goDeleteCard">删除</view>
  </view>
</view>