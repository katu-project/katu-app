<view class="page">
  <view class="cu-list menu margin-top">
    <view class="cu-item arrow item">
      <view class="content" bindtap="tapToPage" data-page="account">
        <text class="cuIcon-profile text-grey"></text>
        <text class="text-grey">账户</text>
      </view>
    </view>
    
    <view class="cu-item arrow item">
      <view class="content" bindtap="tapToPage" data-page="security">
        <text class="cuIcon-unlock text-grey"></text>
        <text class="text-grey">安全</text>
      </view>
    </view>

    <view class="cu-item arrow item" wx:if="{{isDev}}">
      <view class="content" bindtap="tapToPage" data-page="../debug">
        <text class="cuIcon-repair text-grey"></text>
        <text class="text-grey">调试</text>
      </view>
    </view>
  </view>
</view>