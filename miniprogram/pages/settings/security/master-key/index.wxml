<cu-custom bgColor="bg-cyan" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">主密码</view>
</cu-custom>
<view class="page" wx:if="{{false}}">
  <view class="padding flex-col justify-center align-center">
    <view class="bg-gray margin flex justify-center align-center" style="border-radius: 50%;height: 200rpx;width: 200rpx; border: 2px dashed {{setMasterKey?'green':'red'}};">
      <image mode="aspectFit" style="height: 100rpx;width: 100rpx;" src="/static/images/key.svg"></image>
    </view>
    <view class="padding-top text-xl">
      <text class="text-xxl">{{setMasterKey?'修改':'设置'}}主密码 </text>
      <text class="cuIcon-question text-cyan" bindtap="tapToOpenDoc"></text>
    </view>
    <text class="padding-top text-red text-center">主密码用于加/解密用户数据</text>
    <text class="text-red text-center">遗忘主密码将导致加密数据丢失，请务必牢记！</text>
    <text class="text-green text-center">密码应为字母、数字的组合，不少于6位</text>
    <view class="margin-top"></view>
    <view class="padding flex-col justify-center align-center">
      <text class="padding-bottom-sm">输入{{setMasterKey?'当前':''}}主密码</text>
      <view class="padding-xs text-center key-input">
        <input model:value="{{masterKey}}" bindinput="checkInput" type="text"/>
      </view>
    </view>
    <block wx:if="{{setMasterKey}}">
      <view class="padding flex-col justify-center align-center">
        <text class="padding-bottom-sm">输入新的主密码</text>
        <view class="padding-xs text-center key-input">
          <input model:value="{{newMasterKey}}" bindinput="checkInput" type="text"/>
        </view>
      </view>
      <view class="padding flex-col justify-center align-center">
        <text class="padding-bottom-sm">确认新的主密码</text>
        <view class="padding-xs text-center key-input">
          <input model:value="{{newMasterKeyRepeat}}" bindinput="checkInput" type="text"/>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="padding flex-col justify-center align-center">
        <text class="padding-bottom-sm">确认主密码</text>
        <view class="padding-xs text-center key-input">
          <input model:value="{{masterKeyRepeat}}" bindinput="checkRepeatInput" type="text"/>
        </view>
      </view>
    </block>

    <button class="cu-btn block line-cyan lg margin-top-lg gfw" bindtap="tapToSetMasterKey">{{setMasterKey?'更新':'设置'}}主密码</button>

    <view class="padding-top-lg solids-bottom margin" wx:if="{{setMasterKey}}" bindtap="tapToResetKey">
      <text class="text-orange">重置主密码</text>
    </view>
    <view wx:else class="padding"></view>
  </view>
</view>

<view>
  <view class="section">
    <block wx:if="{{step===0}}">
      <view class="desc padding flex flex-direction">
        <text class="padding-tb">主密码用于<text class="text-green text-xxl"> 保护 </text>您的数据安全</text>
        <text class="padding-tb">遗忘主密码将导致 <text class="text-red text-xl"> 数据丢失 </text></text>
        <text class="padding-tb text-red text-xl">请务必牢记主密码！</text>
      </view>
      <view class="margin-top padding flex flex-direction">
        <button class="cu-btn bg-green lg gfw" catchtap="tapToStartSetKey">{{setMasterKey?'修改主密码':'开始设置'}}</button>
      </view>
    </block>

    <block wx:if="{{step===1 || step===2}}">
      <view hidden="{{step===2}}" class="animation-{{backStep?'slide-left':'slide-right'}} section_header padding-tb flex flex-direction">
        <text class="text-green text-xxl">输入{{setMasterKey?'新的':''}}主密码</text> 
        <text class="padding-tb">密码要求为字母、数字的组合，不少于 <text class="text-red text-xxl">8</text> 位</text>
      </view>

      <view hidden="{{step===1}}" class="animation-slide-right section_header padding-tb flex flex-direction">
        <text class="text-green text-xxl">再次输入主密码</text> 
        <text class="padding-tb" style="visibility: hidden;">密码要求为字母、数字的组合，不少于 <text class="text-red text-xxl">8</text> 位</text>
      </view>

      <view class="padding-tb-xs line flex-row justify-center">
        <text class="tips_section text-orange animation-{{tips?'shake':''}}">{{tips}}</text>
      </view>

      <view class='input_row' catchtap='getFocus'>
        <view class='pwd_item'>
          <text class="text adv" wx:for='{{key}}' wx:key='*this'></text>
        </view>
      </view>

      <view wx:if="{{step==2}}" class="margin-top padding flex flex-direction">
        <button class="cu-btn gfw" catchtap="tapToBackStep">回到上一步</button>
      </view>

    </block>
  </view>

  <view wx:if="{{step===3}}" class="section animation-slide-right">
    <view class="section_header padding-tb flex flex-direction">
      <text class="text-green text-xxl">确认{{setMasterKey?'修改成':'使用'}}该主密码?</text> 
      <text class="padding-tb" style="visibility: hidden;">密码要求</text>
    </view>

    <view class="margin-top padding flex flex-direction">
      <button class="cu-btn bg-green lg gfw" catchtap="tapToSetMasterKey">确认</button>
    </view>
  </view>

</view>
<input
    class='input_control' 
    password 
    type="text" 
    focus="{{focus}}"
    value="{{key}}"
    bindinput="checkKey"
    confirm-hold="{{true}}"
    bindconfirm="inputConfirm"
    adjust-position="{{false}}"/>

<input-key 
  tips="输入主密码："
  bind:confirm="inputKeyConfirm"
  inputMode="adv"
  changeMode="{{false}}"
  showSubBtn="{{setMasterKey}}"
  subBtnText="忘记密码"
  bind:tapSubBtn="tapToResetKey"
  result="{{inputKeyResult}}" 
  show="{{showInputKey}}" />