<view class="page">
  <view class="padding-top"></view>
  <view class="margin-bottom padding bg-cyan" style="height: 30vh;border-radius: 6rpx;">
    <view>
      <text class="text-red margin-right-sm">普通卡片额度</text>
      <text class="text-xl">0/{{user.canUseCardCount}}</text>
    </view>
    <view>
      <text class="text-red margin-right-sm">加密卡片额度:</text>
      <text class="text-xl">0/{{user.canUseEncryptedCardCount}}</text>
    </view>
  </view>

  <view class="cu-list menu margin-top" style="min-height: 50vh;">
    <view class="cu-item arrow item" bindtap="tapToSettings">
      <view class="content">
        <text class="cuIcon-settings text-grey"></text>
        <text class="text-grey">设置</text>
      </view>
    </view>
    <view class="cu-item arrow item" bindtap="tapToQA">
      <view class="content">
        <text class="cuIcon-question text-grey"></text>
        <text class="text-grey">使用帮助 ( Q&A )</text>
      </view>
    </view>
    <view class="cu-item arrow item" bindtap="tapOpenAbout">
      <view class="content">
        <text class="cuIcon-info text-grey"></text>
        <text class="text-grey">关于卡兔</text>
      </view>
    </view>
    <view class="cu-item arrow item" wx:if="">
      <view class="content" bindtap="tapOpenJoinGroup">
        <text class="cuIcon-weixin text-grey"></text>
        <text class="text-grey">加入反馈群</text>
      </view>
    </view>
  </view>

  <view class="flex align-center">
    <button class="cu-btn block line-cyan lg" open-type="contact" hover-class="none">
    <text class="cuIcon-service padding-right-sm"></text> 我的客服</button>
  </view>
</view>

<view class="cu-modal {{ showAbout?'show':''}}">
  <view class="cu-dialog bg-cyan light">
    <view class="padding-tb flex flex-col align-center">
      <image mode="aspectFit" class="margin-bottom-xl" style="height: 200rpx; width: 200rpx;border-radius: 50rpx;" src="{{app.logo}}"></image>
      <view class="text-xl">当前版本: <text class="text-grey">{{app.version}}</text></view>
      <view class="padding">
        <button class="cu-btn block line-cyan" open-type="feedback">提交使用反馈</button>
      </view>
    </view>
    <view class="cu-bar bg-cyan" data-key="showAbout" bindtap="hideModal">
      <view class="action margin-0 flex-sub solid-left">关闭</view>
    </view>
  </view>
</view>

<view class="cu-modal {{ showJoinGroup?'show':''}}" data-key="showJoinGroup" bindtap="hideModal">
  <view class="cu-dialog bg-cyan light">
    <image mode="aspectFit" show-menu-by-longpress="{{true}}" bindtap="tapToPreview" class="padding-tb" style="height:300px;" src="{{qrUrl}}"></image>
    <view class="cu-bar bg-cyan">
      <view class="action margin-0 flex-sub  solid-left" data-key="showJoinGroup" bindtap="hideModal">请扫描二维码进群</view>
    </view>
  </view>
</view>